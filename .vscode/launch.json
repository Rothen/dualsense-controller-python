    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C++ in Python Extension",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "C:/Users/benir/anaconda3/envs/chiaki-ng/python.exe",
            "args": [
                // "${file}"
                "${workspaceFolder}/src/examples/example_simple.py",
            ],
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PYTHONPATH",
                    "value": "${workspaceFolder}/hidapi-py/build"
                }
            ],
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "logging": {
                "engineLogging": true,
                "moduleLoad": true
            },
            "symbolSearchPath": "${workspaceFolder}/hidapi-py/build",
            "externalConsole": false
        }
    ]
}